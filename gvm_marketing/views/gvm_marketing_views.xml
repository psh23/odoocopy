<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <menuitem name="marketing"
                  id="menu_marketing_root"
                  web_icon="gvm_marketing,static/description/icon.png"
                  sequence="25"/>
        <menuitem id="menu_marketing" name="marketing"
            parent="menu_marketing_root" sequence="1"/>

        <record id="marketing_form" model="ir.ui.view">
            <field name="name">marketing.form</field>
            <field name="model">gvm.marketing</field>
            <field name="arch" type="xml">
                <form string="marketing">
                      <sheet>
                        <group>
                          <group>
                            <field name="name"/>
                            <field name="project_code"/>
                            <field name="attachment" widget="many2many_binary"/>
                          </group>
                          <group>
                            <field name="site"/>
                            <field name="date_to"/>
                            <field name="date_end"/>
                          </group>
                        </group>
                        <notebook>
                          <page string="진행상황">
                            <field name="lines">
                              <tree editable="true">
                                <field name="name"/>
                                <field name="date_to"/>
                                <field name="date_end"/>
                                <field name="text"/>
                              </tree>
                            </field>
                          </page>
                        </notebook>
                      </sheet>
                </form>
            </field>
        </record>
        <record id="marketing_tree" model="ir.ui.view">
            <field name="name">marketing.tree</field>
            <field name="model">gvm.marketing</field>
            <field name="arch" type="xml">
                <tree string="marketing">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="marketing_kanban" model="ir.ui.view">
            <field name="name">marketing.kanban</field>
            <field name="model">gvm.marketing</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column o_opportunity_kanban">
                    <field name="name"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">

                                    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
                                        <span class="fa fa-bars fa-lg"/>
                                    </a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                        <t t-if="widget.editable"><li><a type="edit">Edit</a></li></t>
                                        <t t-if="widget.deletable"><li><a type="delete">Delete</a></li></t>
                                        <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content">
                                    <div>
                                        <field name="name"/>
                                    </div>
                                    <div>
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="text-muted">
                                    </div>

                                </div>
                                <div class="oe_clear"></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="act_marketing" model="ir.actions.act_window">
            <field name="name">Marketing</field>
            <field name="res_model">gvm.marketing</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="search_view_id"/>
        </record>

        <menuitem name="marketing" id="menu_marketing_herit" parent="menu_marketing" action="act_marketing" sequence="2"/>


</odoo>
