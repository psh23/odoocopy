<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="gvm_crm_tree" model="ir.ui.view">
            <field name="name">GVM Project Tree</field>
            <field name="model">gvm.project</field>
            <field name="arch" type="xml">
                <tree string="Timesheet by Accounts">
                    <field name="name" string="번호"/>
                    <field name="total_sign_price"/>
                    <field name="total_product_price"/>
                </tree>
            </field>
        </record>
        <record id="gvm_crm_form" model="ir.ui.view">
            <field name="name">GVM Project Form</field>
            <field name="model">gvm.project</field>
            <field name="arch" type="xml">
                <form string="Timesheet by Accounts">
		  <field name="name"/>
		  <field name="total_sign_price"/>
		  <field name="total_product_price"/>
		  <field name="sign">
		    <tree>
		      <field name="user_id"/>
		      <field name="had_cost"/>
		      <field name="finally_cost"/>
		    </tree>
		  </field>
		  <field name="project"/>
		  <field name="product"/>
                </form>
            </field>
        </record>
        <record id="act_gvm_crm_project_all" model="ir.actions.act_window">
            <field name="name">GVM Project Action</field>
            <field name="res_model">gvm.project</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" ref="gvm_crm_tree"/>
            <field name="domain"></field>
        </record>

        <menuitem name="손익계산" id="menu_gvm_crm_project_all" parent="sales_team.menu_base_partner" action="act_gvm_crm_project_all" sequence="10"/>

</odoo>
